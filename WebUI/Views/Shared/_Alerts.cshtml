@using MvcCore.Helpers
@{
    var alerts = TempData.Get<List<Alert>>(Alert.TempDataKey);

    if (alerts != null)
    {
        foreach (var alert in alerts)
        {
            var dismissableClass = alert.Dismissable ? "alert-dismissable" : null;
            <div class="alert alert-tsjqroo @alert.AlertStyle @dismissableClass">
                @if (alert.Dismissable)
                {
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                }
                @if (!string.IsNullOrEmpty(alert.IconClass))
                {
                    <span class="@alert.IconClass"></span>
                }
                &nbsp;&nbsp; @Html.Raw(alert.Message)
            </div>
        }
    }
}